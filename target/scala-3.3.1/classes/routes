# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET / controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file controllers.Assets.versioned(path="/public", file: Asset)

# user/admin login
GET /login controllers.UserController.showLoginForm
POST /doLogin controllers.UserController.processLoginAttempt

#user registration
GET /register controllers.UserController.showRegistrationForm
POST /doRegister controllers.UserController.processUserRegistration

# pages for authenticated users
GET /logout controllers.AuthenticatedUserController.logout
GET /landingPage controllers.LandingPageController.showLandingPage()

# show contacts
GET /profile controllers.ProfilePageController.listProfiles
GET /sharePicture controllers.SharePictureController.sharePicture
POST /sharePicture controllers.SharePictureController.upload
POST /likePicture/:id controllers.SharePictureController.handleLikes(id: Long)
POST /commentOnPicture/:id controllers.SharePictureController.handleComment(id: Long)
POST /sortBy/ controllers.SharePictureController.sortBy

GET /seeMore controllers.SharePictureController.showPicDetails(id: Long)
